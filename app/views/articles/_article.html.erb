<div class="card-body shadow p-3 mb-5 mt-5 bg-white rounded container col-sm-11" id="article_<%= article.id %>" >
  <div class="btn-group" style="float: right">
    <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
      <span class="visually-hidden">Dropdown</span>
    </button>
    <ul class="dropdown-menu">
      <% if current_user.id.eql?(article.user.id) %>
<!--        <li><%#= link_to 'Edit', edit_article_path(article.id), class: "dropdown-item"%></li>-->
        <li><%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: "dropdown-item" %></li>
      <% end %>
    </ul>
  </div>
  <h1><%= article.title %></h1>
  <hr>
  <p><%= article.body %></p>
  <div style="font-size: small; color: #666666; background-color: #DADADA; padding: 4px; border-radius: 4px; float: right; margin-right: 0px">
    <%= "Posted on #{article.created_at.strftime("%d-%b-%Y")} by #{article.user.name}" if article.user.present? %>
  </div>
</div>