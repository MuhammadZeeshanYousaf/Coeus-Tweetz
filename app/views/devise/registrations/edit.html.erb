<div class="col-lg-7 col-md-8 col-sm-10 shadow-lg card rounded p-4" style=" float: none; margin: 50px auto;">
  <div class="card-body"> <br>
    <h2 class="card-title text-center text-warning">Edit <%= resource_name.to_s.humanize %></h2> <br>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>


      <div class="field form-group">
        <%= f.label :name %><br/>
        <%= f.text_field :name, class: "form-control", autofocus: true, autocomplete: "name" %> <br>
      </div>

      <div class="field form-group">
        <%= f.label "Username" %><br/>
        <%= f.text_field :username, class: "form-control", autocomplete: "username" %> <br>
      </div>

      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-control" %> <br>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :password %> <i class="text-secondary">(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <em class="text-secondary"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div> <br>

      <div class="field form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %> <br>
      </div>

      <div class="field form-group">
        <%= f.label :current_password %>
        <small class="text-secondary"><i>(we need your current password to confirm your changes)</i></small><br />
        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %> <br>
      </div>

      <div>
        <%= f.submit "Update", class: "btn btn-warning btn-block w-100"%>
      </div>
    <% end %>
        <br>
    <div class="alert alert-danger">
      <h4>Cancel my account</h4>
      <hr>
      <p>Are you unhappy? Cancel account anytime. <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-outline-danger" %></p>
      </div>
      <%= link_to "Back", :back, class: 'btn btn-secondary' %>
  </div>
</div>